nextflow_process {

    name "Test Process compute_silhouette_process"
    script "modules/compute_silhouette.nf"
    process "compute_silhouette_process"

    test("Should run without failures") {

        when {
            params {
                outdir = "results"
            }
            process {
                """
                input[0] = tuple path("tests/input/mock_data.h5ad"), "cell_type", "X_umap"
                input[1] = "euclidean"
                input[2] = true
                input[3] = true
                input[4] = true
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            with (process.out) {
                assert file("silhouette_scores*.csv").exists()
                assert file("cluster_summary*.csv").exists()
            }
        }

    }

}

